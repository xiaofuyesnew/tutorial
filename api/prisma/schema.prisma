// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum EnrolType {
  EMAIL
  GITHUB
}

model User {
  id        Int       @id @default(autoincrement())
  userName  String    @unique
  password  String?
  email     String    @unique
  githubId  Int?       @unique
  name      String?
  avatar    String?
  bio       String?
  enrolType EnrolType
  createAt  String
  updateAt  String?
}
